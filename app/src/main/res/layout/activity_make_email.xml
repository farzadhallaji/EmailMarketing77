<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    tools:context="email_marketing.azad.hallaji.farzad.emailmarketing.Make_Email">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0691e2"
        android:padding="5dp"
        android:id="@+id/asad">

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/backbutton"
            android:text="       back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Choose your template"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:padding="60dp"
            android:gravity="bottom"
            android:typeface="sans"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/headertext"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/email"
        android:id="@+id/emailimageview"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/asad"
        android:orientation="vertical"
        android:id="@+id/asadd">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:id="@+id/templay1"
            android:orientation="horizontal"
            android:layout_weight="1">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/mohtavayetomagayer"
            android:layout_weight="12222"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:orientation="vertical"
            android:layout_below="@id/templay1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:id="@+id/mohtavaye1">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/templatelistview"
                    android:visibility="visible"
                    android:layout_marginBottom="15dp"
                    android:isScrollContainer="true">
                </ListView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mohtavaye2"
                android:visibility="gone">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/contactslistview"
                    android:visibility="visible"
                    android:layout_marginBottom="10dp"
                    android:isScrollContainer="true">

                </ListView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/mohtavaye3">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressbarsendemailobject"
                    android:layout_centerInParent="true"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resultsendemailobjtextview"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_below="@+id/mohtavayetomagayer">

            <Button
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/menu"
                android:text="Continue"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:visibility="visible"
                android:id="@+id/nextbutton"
                android:shadowRadius="30"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
